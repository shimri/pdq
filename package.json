{
  "name": "pdq",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"backend,client\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:client\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:backend && npm run build:client",
    "build:backend": "cd backend && npm run build",
    "build:client": "cd client && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../client && npm install"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
